# Example environment configuration file
# Copy this to .env and update with your actual values

# Database Configuration
DB_URL=sqlite:///data/sample.db
DB_ECHO=false

# Redis Configuration (optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# LLM Configuration
LLM_PROVIDER=openai
LLM_MODEL=gpt-4
LLM_TEMPERATURE=0.0
LLM_MAX_TOKENS=
LLM_TIMEOUT=60.0

# API Keys (choose one based on your provider)
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
TOGETHER_API_KEY=your-together-api-key-here

# Application Settings
APP_TITLE=Text2SQL API
APP_DEBUG=false
APP_LOG_LEVEL=INFO
APP_HOST=127.0.0.1
APP_PORT=8000

# Session Management
APP_SESSION_TTL=86400
APP_MAX_HISTORY_MESSAGES=20
APP_MAX_SQL_ROWS=100
APP_SQL_TIMEOUT=30.0